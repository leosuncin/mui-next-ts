{
  "extends": "../tsconfig.json",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["../node_modules"],
  "compilerOptions": {
    "isolatedModules": false,
    "target": "es6",
    "module": "es6",
    "jsx": "react",
    "baseUrl": "..",
    "paths": {
      "components": ["components/*"],
      "services": ["services/*"],
      "libs": ["libs/*"],
      "machines": ["machines/*"],
      "middlewares": ["middlewares/*"],
      "hooks": ["hooks/*"],
      "pages": ["pages/*"],
      "utils": ["utils/*"]
    },
    "types": [
      "cypress",
      "@testing-library/cypress",
      "cypress-wait-until",
      "@bahmutov/cy-api"
    ]
  }
}
